     <% obj.each do |client| %>
        <div class = "row">
            <div class = "col-xs-8 col-xs-offset-2">
                <div class = "well well-lg">
                    <div class = "client-name">
                        Name: <span class = "client-name-user-show"<%= link_to client.name, client_path(client) %></span></span>
                    </div>
                    <div class = "left">
                        <div class = "client-info">
                            Address: <%=client.address%><br/>
                            Phone Number: <%=client.phone_number%><br/>
                            Appointed or Retained: <%=client.appointed_retained%><br/>
                            Alleged Offenses: <%=client.alleged_offenses%><br/>
                                <div class = "client-meta-details">
                                    <small>
                                        Created by: <%= client.user.username if client.user %>,
                                        <%= time_ago_in_words(client.created_at) %> ago,
                                        last updated: <%= time_ago_in_words(client.updated_at) %> ago
                                    </small>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="client-actions">
                <%= link_to "Update this client", edit_client_path(client), class:"btn btn-xs btn-primary" %>
                <%= link_to "Delete this client", client_path(client), method: :delete, data: { confirm:"Are you sure you want to delete this client?" }, class:"btn btn-xs btn-danger" %>
                <%= link_to "Client List", clients_path, class: "btn btn-xs btn-success" %>
                </div>
            </div>
            
        </div>
    <% end %>