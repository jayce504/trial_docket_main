<span class="heading"><h2 align="center">Name: <%= @client.name %></h2></span>
<div class="well col-xs-8 col-xs-offset-2">
    <% if @client.user_id? %>
        <ul class = "listing">
            <div class = 'row center'>
                <div class = 'col-md-4 col-md-offset-5'> 
                    <span class = "heading"><li>Created by:</li></span>
                    <li><%= link_to gravatar_for(@client.user), user_path(@client.user) %></li>
                    <li class = "client-name">
                        <%= link_to @client.user.username, user_path(@client.user) %>
                    </li>
                    <li><small>
                        <%= pluralize(@client.user.clients.count, "client") if @client.user.clients %>
                    </small></li>
                </div>
            </div>
            <hr/>
        </ul>
    <% end %>
<h4 class = "center description">Address: </h4><%= simple_format(@client.address) %>
<h4 class = "center description">Phone Number: </h4><%= simple_format(@client.phone_number) %>
<h4 class = "center description">Appointed or Retained: </h4><%= simple_format(@client.appointed_retained) %>
<h4 class = "center description">Alleged Offenses: </h4><%= simple_format(@client.alleged_offenses) %>
 
    <div class="client-actions">
        <% if @client.user_id %>
            <%= link_to "Update this client", edit_client_path(@client), class:"btn btn-xs btn-primary" %>
            <%= link_to "Delete this client", client_path(@client), method: :delete, data: { confirm:"Are you sure you want to delete this client?" }, class:"btn btn-xs btn-danger" %>
        <% end %>
        <%= link_to "Client List", clients_path, class: "btn btn-xs btn-success" %>
    </div>
</div>
